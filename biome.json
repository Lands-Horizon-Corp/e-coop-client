{
    "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
    "extends": [],
    "files": {
        "includes": [
            "src/**/*.{ts,tsx}",
            "!/package.json"
        ],
        "ignoreUnknown": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "includes": [
            "**",
            "!test/**"
        ],
        "rules": {
            "recommended": true,
            "a11y": {
                "noAccessKey": "error",
                "noAriaHiddenOnFocusable": "error"
            },
            "nursery": {
                "useSortedClasses": "on"
            },
            "correctness": {
                "noUnusedImports": "error",
                "noUnusedVariables": "error",
                "useExhaustiveDependencies": "error",
                "useHookAtTopLevel": "error"
            },
            "style": {
                "noDefaultExport": "off",
                "noImplicitBoolean": "warn",
                "useBlockStatements": "off"
            },
            "suspicious": {
                "noDoubleEquals": "error",
                "noAsyncPromiseExecutor": "error"
            },
            "complexity": {
                "useFlatMap": "warn"
            }
        }
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "off",
                "useSortedAttributes": "off",
                "useSortedKeys": "off",
                "useSortedProperties": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "jsxQuoteStyle": "single"
        }
    }
}
